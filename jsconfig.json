{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "~~/*": [
                "./*"
            ],
            "@@/*": [
                "./*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "app",
        "res",
        "www"
    ],
    "include": [
        "src/**/*"
    ]
}
